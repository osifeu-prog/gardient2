*.yml   text eol=lf
*.yaml  text eol=lf
*.json  text eol=lf
*.md    text eol=lf
*.txt   text eol=lf
*.env   text eol=lf
*.toml  text eol=lf
*.ini   text eol=lf
*.cfg   text eol=lf
Dockerfile text eol=lf
