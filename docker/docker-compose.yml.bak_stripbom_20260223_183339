version: '3.9'
services:
  bot:
    build: ./docker
    env_file: ../.env.example
    command: python bot/main.py
    depends_on:
      - db
      - redis
  dashboard:
    build: ./docker
    env_file: ../.env.example
    command: python dashboard/app.py
    ports:
      - '5000:5000'
    depends_on:
      - db
      - redis
  db:
    image: postgres:15
    environment:
      POSTGRES_USER: postgres
      POSTGRES_PASSWORD: postgres
      POSTGRES_DB: tg_guardian
    ports:
      - '5432:5432'
    volumes:
      - pgdata:/var/lib/postgresql/data
  redis:
    image: redis:7
    ports:
      - '6379:6379'
volumes:
  pgdata:
